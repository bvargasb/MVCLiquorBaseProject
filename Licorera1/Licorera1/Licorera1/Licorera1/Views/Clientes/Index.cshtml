@model IEnumerable<Cliente>


@{
    ViewData["Title"] = "Clientes";
}

<h1>Clientes</h1>
<h2>Lista de clientes</h2>

<p>
    <a asp-action="Create">Registrar Cliente</a>
</p>

<form asp-action="Index" >
    <p>
        Digitar la identificación del cliente: <input type="number" name="id" />
        <input type="submit" value="Consultar" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ClienteID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NombreCompleto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Provincia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Canton)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Distrito)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HistorialTotalDinero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UltimoAnoDinero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CantidadSeisMesesDinero)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ClienteID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NombreCompleto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Provincia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Canton)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Distrito)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HistorialTotalDinero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UltimoAnoDinero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CantidadSeisMesesDinero)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ClienteID}) |
                @Html.ActionLink("Details", "Details", new { id = item.ClienteID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ClienteID })
                
            </td>
        </tr>
}
    </tbody>
</table>
